<resources >
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>




    <style name="app_button" parent="@style/TextAppearance.AppCompat.Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="app_text" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>
  <style name="app_text_14" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <style name="app_text_14_white" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <style name="HuaweiButton">
        <item name="drawableStartCompat">@drawable/ic_huawei</item>
        <item name="android:textColor">#757575</item>
    </style>
</resources>